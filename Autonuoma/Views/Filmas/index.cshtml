@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.FilmasList>

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Filmas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

@* content itself *@
<div class="main-content-lst">
	<table class="entity-list">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(m => m.Id)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Pavadinimas)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Trukme)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Kaina)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Isleidimo_data)
				</th>
                <th>
					@Html.DisplayNameFor(m => m.Kategorija)
				</th>
                <th>
					@Html.DisplayNameFor(m => m.Kiekis)
				</th>
                <th>
					@Html.DisplayNameFor(m => m.Vidurkis)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(m => item.Id)
				</td>
				<td>
					@Html.DisplayFor(m => item.Pavadinimas)
				</td>
				<td>
					@Html.DisplayFor(m => item.Trukme)
				</td>
				<td>
					@Html.DisplayFor(m => item.Kaina)
				</td>
				<td>
					@Html.DisplayFor(m => item.Isleidimo_data)
				</td>
                <td>
					@Html.DisplayFor(m => item.Kategorija)
				</td>
                <td>
					@Html.DisplayFor(m => item.Kiekis)
				</td>
                <td>
					@Html.DisplayFor(m => item.Vidurkis)
				</td>
				<td>
					<a 
						href="@Url.Action("Edit", new { id = item.Id })" 
						class="btn btn-primary"
						><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
						
					<a 
						href="@Url.Action("Delete", new { id = item.Id })" 
						class="btn btn-danger"
						><i class="fa-solid fa-trash"></i> Šalinti</a>					
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>